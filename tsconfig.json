{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": "src",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "shared/*": ["shared/*"],
      "@runtime": ["runtime/index.ts"]
    }
  }
}
